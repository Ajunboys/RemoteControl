<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:padding="8dp">
   
    <ImageView android:id="@+id/machine_icon"
               android:layout_width="wrap_content"
		       android:layout_height="40dp"
		       android:src="@drawable/ic_washroom"
		       android:layout_alignParentLeft="true"
		       android:layout_alignParentStart="true"
			   android:gravity="center"
		       android:contentDescription="@string/contentDescription"/>
    
	<TextView
	    android:id="@+id/machine_name"
		android:layout_width="wrap_content"
		android:layout_height="40dp"
		android:text="超級電視"
		android:textStyle="bold"
		android:gravity="center"
		android:layout_alignParentLeft="true"
		android:layout_alignParentStart="true"
		android:layout_toRightOf="@id/machine_icon"
		android:layout_toLeftOf="@+id/machine_status" />

	<ImageView
	    android:id="@+id/machine_status"
		android:layout_width="40dp"
		android:layout_height="40dp"
		android:layout_alignParentRight="true"
		android:src="@android:drawable/star_big_on"
		android:layout_centerVertical="true"
		/>
	
	<ImageView
	    android:id="@+id/machine_remove_icon"
		android:layout_width="40dp"
		android:layout_height="40dp"
		android:layout_alignParentRight="true"
		android:background="@color/red"
		android:src="@drawable/rootblock_btn_remove"
		android:visibility="gone"
		android:layout_centerVertical="true"
		/>
	
</RelativeLayout>